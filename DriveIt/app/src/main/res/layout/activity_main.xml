<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:gauge="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">
        
        <de.nitri.gauge.Gauge
            android:id="@+id/IDgauge"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/IDTextview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            gauge:initialValue="0"
            gauge:maxValue="300"
            gauge:minValue="0"
            gauge:totalNicks="120"
            gauge:valuePerNick="3" />
    
        <Button
            android:id="@+id/IDnaprej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Naprej"
            app:layout_constraintBottom_toTopOf="@+id/IDnazaj"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    
        <Button
            android:id="@+id/IDnazaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="NAZAJ"
            app:layout_constraintBottom_toTopOf="@+id/IDconnect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent" />
    
        <Button
            android:id="@+id/IDconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Connect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    
        <Button
            android:id="@+id/IDprestava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Prestava"
            app:layout_constraintBottom_toTopOf="@+id/IDconnect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/IDnaprej"
            app:layout_constraintTop_toBottomOf="@+id/IDTextview" />
    
        <TextView
            android:id="@+id/IDTextview"
            android:layout_width="169dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/IDnaprej"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />
    
    
    
    </android.support.constraint.ConstraintLayout>